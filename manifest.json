{
    "manifest_version": 3,
    "name": "chatgpt-always-upload",
    "version": "1.0.0",
    "description": "clears cookies and stuff so you can keep uploading pictures to chatgpt",
    "permissions": [ "cookies", "storage" ],
    "host_permissions": [ "https://chatgpt.com/*" ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [ "https://chatgpt.com/*" ],
            "js": [ "content.js" ],
            "run_at": "document_end"
        }
    ]
}